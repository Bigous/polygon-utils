{
	"name": "@bigous/polygon-utils",
	"version": "0.0.1",
	"description": "polygon-utils goal is to define some useful polygon functions",
	"scripts": {
		"test": "jest --no-cache --coverage",
		"dev": "nodemon --watch \"src\" --exec \"npm test\" -e ts",
		"build": "tsc --build tsconfig.json"
	},
	"author": "Richard Natal",
	"homepage": "https://github.com/Bigous/polygon-utils",
	"license": "MIT",
	"dependencies": {},
	"devDependencies": {
		"@types/jest": "^26.0.0",
		"jest": "^26.0.1",
		"nodemon": "^2.0.4",
		"ts-jest": "^26.1.0",
		"ts-node": "^8.10.2",
		"typescript": "^3.9.5"
	},
	"main": "dist/library.js",
	"files": [
		"/dist/**/*",
		"/src/**/*",
		"!/src/**/*.test.*",
		"tsconfig.json"
	],
	"keywords": [
		"polygon",
		"util"
	],
	"jest": {
		"transform": {
			"^.+\\.ts$": "ts-jest"
		},
		"testRegex": "\\.test\\.ts",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		]
	}
}